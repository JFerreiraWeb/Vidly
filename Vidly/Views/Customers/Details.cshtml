@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li><b>Membership Type:</b> @Model.MembershipType.Name</li>
    @if (Model.DateOfBirth.HasValue)
    {

        <li><b>Date of Birth: </b>@String.Format("{0:dd/MM/yyyy}", Model.DateOfBirth)</li>
    }
</ul>


